{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/update",
      "dest": "/api/cron.ts"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },
    {
      "src": "^/(?!api).*",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update",
      "schedule": "55 9 * * *"
    },
    {
      "path": "/api/cron/update",
      "schedule": "55 14 * * *"
    },
    {
      "path": "/api/cron/update",
      "schedule": "55 19 * * *"
    }
  ]
} 