{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    },
    "outDir": "dist"
  },
  "include": ["./**/*.ts", "../src/lib/**/*.ts"],
  "exclude": ["node_modules"]
} 